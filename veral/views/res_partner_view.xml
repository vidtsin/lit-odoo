<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data> 


<!--forms para gestion de clase de máquinas-->

    <record id="view_veral_prod_type_tree" model="ir.ui.view">
      <field name="name">veral.prod.type.tree</field>
      <field name="model">veral.product.type</field>
      <field name="priority" eval="8" />
      <field name="arch" type="xml">
        <tree string="Clases de máquinas">
          <field name="name" />
          <!--field name="usadas" /-->
        </tree>
      </field>
    </record>

    <record id="view_veral_prod_type_form" model="ir.ui.view">
      <field name="name">veral.prod.type.form</field>
      <field name="model">veral.product.type</field>
      <field name="priority" eval="8" />
      <field name="arch" type="xml">
        <form string="Clase de máquinas">
          <group>
            <field name="name" />
            <!--field name="usadas" /-->
          </group>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_veral_prod_type_view">
      <field name="name">Clases de máquinas</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">veral.product.type</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_open_veral_prod_type_view_form">
      <field name="act_window_id" ref="act_open_veral_prod_type_view" />
      <field name="sequence" eval="20" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_veral_prod_type_form" />
    </record>

    <record model="ir.actions.act_window.view" id="act_open_veral_prod_type_view_tree">
      <field name="act_window_id" ref="act_open_veral_prod_type_view" />
      <field name="sequence" eval="10" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_veral_prod_type_tree" />
    </record>


<!--forms para gestion de subtipos de máquinas-->

    <record id="view_veral_prod_subtype_tree" model="ir.ui.view">
      <field name="name">veral.prod.subtype.tree</field>
      <field name="model">veral.product.subtype</field>
      <field name="priority" eval="8" />
      <field name="arch" type="xml">
        <tree string="Tipos de máquinas">
          <field name="product_type" />
          <field name="name" />
          <field name="estado" />
        </tree>
      </field>
    </record>

    <record id="view_veral_prod_subtype_form" model="ir.ui.view">
      <field name="name">veral.prod.subtype.form</field>
      <field name="model">veral.product.subtype</field>
      <field name="priority" eval="8" />
      <field name="arch" type="xml">
        <form string="Tipo de máquinas">
          <group>
            <field name="product_type" />
            <field name="name" />
            <field name="estado" />
          </group>
        </form>
      </field>
    </record>

    <record model="ir.actions.act_window" id="act_open_veral_prod_subtype_view">
      <field name="name">Tipos de máquinas</field>
      <field name="type">ir.actions.act_window</field>
      <field name="res_model">veral.product.subtype</field>
      <field name="view_type">form</field>
      <field name="view_mode">tree,form</field>
    </record>

    <record model="ir.actions.act_window.view" id="act_open_veral_prod_subtype_view_form">
      <field name="act_window_id" ref="act_open_veral_prod_subtype_view" />
      <field name="sequence" eval="20" />
      <field name="view_mode">form</field>
      <field name="view_id" ref="view_veral_prod_subtype_form" />
    </record>

    <record model="ir.actions.act_window.view" id="act_open_veral_prod_subtype_view_tree">
      <field name="act_window_id" ref="act_open_veral_prod_subtype_view" />
      <field name="sequence" eval="10" />
      <field name="view_mode">tree</field>
      <field name="view_id" ref="view_veral_prod_subtype_tree" />
    </record>




<!--form view de partner para mostrar máquinas y fecha de alta-->
    <record id="view_veral_res_form" model="ir.ui.view">
        <field name="name">veral.res.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="//field[@name='title']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='title']" position="after">
                  <field name="fecha_alta" />
                </xpath>

                <xpath expr="//field[@name='function']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
                <xpath expr="//field[@name='function']" position="after">
                  <field name="website" />
                </xpath>

                <xpath expr="//field[@name='website']" position="attributes">
                  <attribute name="invisible">1</attribute>
                </xpath>
                <!--xpath expr="//field[@name='website']" position="after">
                  <field name="parque_lines" widget="many2many_tags"/>
                </xpath-->
                <xpath expr="//page[@string='Contacts']" position="before">
                  <page string="Parque de máquinas">
                    <group>
                      <field name="parque_lines" context="{'partner_id': active_id }">
                        <tree editable='bottom'>    
                            <field name="name" string="Máquina"/>
                            <field name="date"/>
                            <field name="subproduct_id"/>
                            <field name="baja"/>
                            <field name="notas"/>
                        </tree>
                      </field>
                    </group>
                  </page>
                </xpath>

                <!--xpath expr="//page[@name='sales_purchases']/group/group/field[@name='supplier']" position="after">
                    <field name="comisiona"/>
                </xpath-->
            </field>
    </record>

    <record id="view_res_veral_filter" model="ir.ui.view">
        <field name="name">res.veral.filter</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='type_company']" position="after">
                    <filter string="Activos" name="veral_customer" domain="[('fecha_alta','!=',False)]"/>
                    <filter string="Potenciales" name="veral_customer" domain="[('fecha_alta','=',False)]"/>
                    <filter string="Marketing" name="veral_partner_marketing" domain="[('no_marketing','=',False)]"/>
                </xpath>
            </field>
    </record>


<!-- form para vincular tipo de maquinas en oportunidades fomr y kanban-->
    <record id="veral_crm_case_form_view_oppor" model="ir.ui.view">
            <field name="name">Veral Tipos en Oportunidades</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_form_view_oppor"/>
            <field name="arch" type="xml">
                <field name="categ_ids" position="after">
                    <field name="product_subtype_id" />
                </field>
                
            </field>
        </record>

        <record id="veral_crm_case_kanban_view_oppor" model="ir.ui.view">
            <field name="name">Veral Tipos Kanban Oportunidades</field>
            <field name="model">crm.lead</field>
            <field name="inherit_id" ref="crm.crm_case_kanban_view_leads"/>
            <field name="arch" type="xml">
                <field name="partner_id" position="after">
                  <div style="padding-left: 0.5em">
                    <t t-if="record.product_subtype_id"><b> TIPO: </b></t>
                    <field name="product_subtype_id" />
                  </div>
                </field>
            </field>
        </record>

