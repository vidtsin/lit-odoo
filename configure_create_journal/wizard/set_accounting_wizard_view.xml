<openerp>
    <data>
        
        <record model="ir.ui.view" id="view_configure_create_journal_wizard">
            <field name="name">configure.create.journal.form</field>
            <field name="model">configure.create.journal</field>
            <field name="arch" type="xml">
                 <form string="Configure Create Journal" version="7.0">
                    <group colspan="4" >
                    <div class="oe_row oe_spaced">
						<h2 class="oe_slogan">
						   Configuracion de diarios por Almacen
						</h2>
						  <ol class="arabic simple">
						   <li>
						   Este programa genera contadores de facturas con series diferentes por almacen:
						    
						    Contadores de factura y facturas rectificativas  
						    Contadores de asientos de diarios ventas y rectificativas
						    Diarios de ventas y rectificativas
						   </li> 
						  </ol>
						 </div>         
                    </group>
                    <footer>
                        <button name="configure_journal" type="object" string="Apply" class="oe_highlight"/>
                        or
                        <button name="action_skip" type="object" special="cancel" string="Cancel" class="oe_link"/>
                    </footer>
                </form>
            </field>
        </record>
        
        <record id="action_configure_create_journal_wizard" model="ir.actions.act_window">
            <field name="name">Configure Create Journal</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">configure.create.journal</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_configure_create_journal_wizard"/>
            <field name="target">new</field>
        </record>

  
  
    <menuitem id="menu_generate_instalacion" name="Instalacion" parent="account.menu_finance" sequence="30"/>
 
    <menuitem 
    		action="action_configure_create_journal_wizard"
    		name="Generar diariosxAlmacenes"
    		id="menu_action_configure_create_journal_wizard" 
    		parent="menu_generate_instalacion" 
    		sequence="100"/>

        </data>
</openerp>
