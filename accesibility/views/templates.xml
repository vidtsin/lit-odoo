<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="assets_login" inherit_id="web.login_layout">
          <xpath expr="." position="inside">
              <link rel="stylesheet" href="/accesibility/static/src/css/login.css" />
              <script type="text/javascript" src="/accesibility/static/src/js/login.js"></script>
          </xpath>
        </template>
        
        <template id="assets_kanban" inherit_id="web_kanban.assets_backend">
          <xpath expr="." position="inside">
            <link rel="stylesheet" href="/accesibility/static/src/css/accesibility.css" />
            <script type="text/javascript" src="/accesibility/static/src/js/utils.js"></script>
            <script type="text/javascript" src="/accesibility/static/src/js/main.js"></script>
          </xpath>
        </template>

      <!-- Remove login footer -->
      <!-- Priority 10 to be applied before website.login_layout if installed -->
      <template id="login_layout" inherit_id="web.login_layout" name="Remove login footer" priority="10">
          <xpath expr="//div[@class='oe_single_form_footer']" position="replace">
              <div></div>
          </xpath>
      </template>

      <template id="menu_secondary" inherit_id="web.menu_secondary" name="Force logo in backend" priority="20">
          <xpath expr="//div[@class='oe_footer']" position="replace">
              <div></div>
          </xpath>
      </template> 

    </data>
</openerp>
