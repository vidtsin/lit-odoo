<?xml version="1.0"?>
<openerp>
   <data>   
<record id="tercap_ruta_form_view_inherit" model="ir.ui.view" >
    <field name="name">tercap.ruta.form.view.inherit</field>
    <field name="model">ruta</field>
    <field eval="1" name="priority"/>
    <field name="inherit_id" ref="tercap_impor_export.tercap_ruta_form_view"/>
    <field name="arch" type="xml">     
           <xpath expr="//group/group/field[@name='dias_visita']" position="replace">
            <field name="dias_visita" widget="many2many_tags" options="{'no_create_edit':'1'}"/>
           </xpath>
         </field>
      </record>


      <record model="ir.actions.act_window" id="tercap_mod_days_action">
            <field name="name">Tercap Mod Dias</field>
            <field name="res_model">tercap.days</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>

    </record>
    <menuitem id="mod_tercap_menu" name="Tercap Create Days" parent="base.menu_config" action="tercap_mod_days_action"/>



   

    <record id="liderit_tercap_mod_days_view_tree" model="ir.ui.view">
        <field name="name">liderit.tercap.mod.days.view.tree</field>
        <field name="model">tercap.days</field>
        <field name="arch" type="xml">
             
            <tree string="Dias Semana Ruta">
                    
                <field name="name"/>
                <field name="cod_day"/> 
            </tree>   
        </field>
    </record>
    </data>
</openerp>