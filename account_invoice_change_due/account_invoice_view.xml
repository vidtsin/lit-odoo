<?xml version="1.0" encoding="utf-8"?>

<openerp>
<data>

<!--ampliar la vista de facturas para poner un campo cuando este validada-->
        <record model="ir.ui.view" id="account_invoice_form_postpone_due">
            <field name="name">account.invoice.form.postpone.due</field>
            <field name="model">account.invoice</field>
            <field name="inherit_id" ref="account.invoice_form"/>
            <field name="arch" type="xml">

                <field name="payment_term" position="after">
                    <field name="due_date_beguin" attrs="{'readonly': [('state','in',['draft'])]}"/>
                </field>

                <xpath expr="//page[@string='Payments']" position="after">            								
					<page string="Dues" groups="account.group_account_user">
                        <field name="due_lines">
                        	<tree string="Dues" colors="grey:reconcile_id!=False;red:date_maturity&lt;current_date" default_order="date_maturity">
                        		<field name="date_maturity"/>
                        		<field name="maturity_residual" sum="Total Residual"/>
                        		<!--field name="payment_mode_id" readonly="1"/-->
				                <field name="payment_term_id" readonly="1"/>
				                <field name="account_id" readonly="1"/>
				                <field name="debit" readonly="1" sum="Total Debit"/>
				                <field name="credit" readonly="1" sum="Total Credit"/>
				                <field name="move_id" readonly="1"/>
				                <field name="reconcile_id" readonly="1"/>
				                <field name="reconcile_partial_id" readonly="1"/>
				            </tree>
				        </field>
                    </page>
				</xpath>

            </field>
        </record> 

</data>
</openerp>
